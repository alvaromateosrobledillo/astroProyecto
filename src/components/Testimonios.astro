---

<section id="testimonios" class="py-20 bg-lightBackground dark:bg-darkBackground">
  <div class="container mx-auto text-center max-w-7xl px-4">
    <h2 class="fade-in text-4xl font-semibold mb-12 text-gray-900 dark:text-white">Qué Dicen Nuestros Clientes</h2>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {testimonials.map((testimonial, index) => (
        <div class="fade-in testimonial-item bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-2xl transition transform hover:-translate-y-2">
          <p class="text-lg italic mb-4 text-gray-700 dark:text-gray-300">"{testimonial.text}"</p>
          <div class="text-left">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{testimonial.name}</h3>
            <p class="text-yellow-500">
              {"★".repeat(testimonial.rating)}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const elements = document.querySelectorAll(".fade-in");
    elements.forEach((element, index) => {
      setTimeout(() => {
        element.classList.add("visible");
      }, index * 300); // Delay entre las animaciones de cada elemento
    });
  });
</script>

<style>
  .fade-in {
    opacity: 0;
    transition: opacity 1s ease-in-out, transform 1s ease-in-out;
    transform: translateY(20px);
  }
  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
